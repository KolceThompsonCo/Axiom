{{!< default}}

<header>
    {{#if @blog.cover}}
        <img src="{{@blog.cover}}">
    {{/if}}

    <nav>
        {{#if @blog.logo}}
            <a href="{{@blog.url}}">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}">
            </a>
        {{/if}}
    </nav>

    <h1>
        {{@blog.title}}
        <small>{{@blog.description}}</small>
    </h1>
</header>

<main role="main">
    {{#foreach posts}}
        <article class="{{post_class}}">
            <header>
                <h2><a href="{{url}}">{{{title}}}</a></h2>
            </header>

            <section>
                <p>{{excerpt words="26"}} <a href="{{url}}">&raquo;</a></p>
            </section>

            <footer>
                {{#if author.image}}<img src="{{author.image}}" alt="{{author.name}}">{{/if}}
                {{author}}
                {{tags prefix=" on "}}
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </footer>
        </article>
    {{/foreach}}

    {{pagination}}
</main>
