{{!< default}}

{{#post}}
    <header>
        {{#if image}}
            <img src="{{image}}">
        {{/if}}

        <nav>
            {{#if @blog.logo}}
                <a href="{{@blog.url}}">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}}">
                </a>
            {{/if}}
        </nav>
    </header>

    <main role="main">
        <article class="{{post_class}}">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
            </header>

            <section class="post-content">
                {{content}}
            </section>

        </article>
    </main>
{{/post}}
